{{!-- The big email subscribe modal content overlay --}}
{{!-- Option has to be toggled as true --}}
{{#if @labs.subscribers}}
  <div id="subscribe" class="subscribe-overlay">
    <a class="subscribe-overlay-close" href="#"></a>
    <div class="subscribe-overlay-content">
      {{#if @blog.logo}}
        <img class="subscribe-overlay-logo" src="{{@blog.logo}}" alt="{{@blog.title}}" />
      {{/if}}
      <h1 class="subscribe-overlay-title">Why not subscribe to my blog?</h1>
      <p class="subscribe-overlay-description">You'll then be kept up to date with all the latest &amp; greatest posts delivered straight to your inbox!</p>

      <!-- Begin MailChimp Signup Form -->
      <link href="//cdn-images.mailchimp.com/embedcode/classic-10_7.css" rel="stylesheet" type="text/css">

      <style type="text/css">
      	#mc_embed_signup{color: black; }
      </style>

      <div id="mc_embed_signup">
        <form action="https://leightley.us17.list-manage.com/subscribe/post?u=7595b8eb928dd03b6379bc76f&amp;id=b72153792a" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
          <div id="mc_embed_signup_scroll">

            <div class="mc-field-group">
              <input type="email" value=""  placeholder="youremail@example.com" name="EMAIL" class="required email" id="mce-EMAIL">
            </div>
            <div id="mce-responses" class="clear">
              <div class="response" id="mce-error-response" style="display:none"></div>
              <div class="response" id="mce-success-response" style="display:none"></div>
            </div>
            <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
            <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_7595b8eb928dd03b6379bc76f_b72153792a" tabindex="-1" value=""></div>
            <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
          </div>
        </form>
      </div>
      <script type='text/javascript' src='//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js'></script>
      <script type='text/javascript'>
        (function($) {
          window.fnames = new Array();
          window.ftypes = new Array();
          fnames[0] = 'EMAIL';
          ftypes[0] = 'email';
          fnames[1] = 'FNAME';
          ftypes[1] = 'text';
          fnames[2] = 'LNAME';
          ftypes[2] = 'text';
          fnames[3] = 'BIRTHDAY';
          ftypes[3] = 'birthday';
        }(jQuery));
        var $mcj = jQuery.noConflict(true);
      </script>
      <!--End mc_embed_signup-->

    </div>
  </div>
{{/if}}
